<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bokk"
    tools:context=".Booking_Wash">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/login_packground"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#6036D6"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bookname"
                android:background="@drawable/login_packground"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Enter your Name"
                android:drawableLeft="@drawable/baseline_person_24"
                android:inputType="text"
                android:drawablePadding="8dp"
                android:textColor="#6036D6"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bookphone"
                android:background="@drawable/login_packground"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter your Phone number"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:inputType="phone"
                android:drawablePadding="8dp"
                android:textColor="#6036D6"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bookdate"
                android:background="@drawable/login_packground"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter the Date"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:inputType="date"
                android:drawablePadding="8dp"
                android:textColor="#6036D6"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bookservies"
                android:background="@drawable/login_packground"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter the service.. "
                android:drawableLeft="@drawable/baseline_shopping_cart_24"
                android:inputType="text"
                android:drawablePadding="8dp"
                android:textColor="#6036D6"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Book"
                android:id="@+id/bookingHair"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>